---
import BaseHead from "../components/BaseHead.astro";
import ItemCard from "../components/ItemCard.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const checkboxes = document.querySelectorAll("input[type='checkbox']");

      // Restaurar estado desde localStorage
      checkboxes.forEach((checkbox, index) => {
        const key = `checklist-item-${index}`;
        const saved = localStorage.getItem(key);
        if (saved === "true") {
          checkbox.checked = true;
        }

        checkbox.addEventListener("change", () => {
          localStorage.setItem(key, checkbox.checked);
        });
      });
    });
  </script>

  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

  <body>
    <Header title={SITE_TITLE} />
    <h1>✅ Checklist Interactivo: Viaje a Madrid (3 días)</h1>

    <div class="category">
      <h2>� Ropa</h2>
      <label
        ><input type="checkbox" data-id="camisetas" />3 camisetas o blusas
        ligeras</label
      >
      <label
        ><input type="checkbox" data-id="camisa-chic" />1 camisa/blusa "casual
        chic"</label
      >
      <label
        ><input type="checkbox" data-id="pantalones-cortos" />2 pantalones
        cortos o faldas</label
      >
      <label
        ><input type="checkbox" data-id="pantalon-largo" />1 pantalón largo
        ligero</label
      >
      <label
        ><input type="checkbox" data-id="vestido" />1 vestido o conjunto más
        formal</label
      >
      <label
        ><input type="checkbox" data-id="ropa-interior" />3 mudas de ropa
        interior</label
      >
      <label
        ><input type="checkbox" data-id="calcetines" />3 pares de calcetines
        finos</label
      >
      <label><input type="checkbox" data-id="pijama" />1 pijama ligero</label>
      <label
        ><input type="checkbox" data-id="banador" />1 bañador o bikini</label
      >
      <label
        ><input type="checkbox" data-id="chaqueta-fina" />1 chaqueta fina o
        camisa larga</label
      >
    </div>

    <div class="category">
      <h2>� Calzado</h2>
      <label
        ><input type="checkbox" data-id="sandalias" />1 par de sandalias cómodas</label
      >
      <label
        ><input type="checkbox" data-id="zapatillas" />1 par de zapatillas
        transpirables</label
      >
    </div>

    <div class="category">
      <h2>� Aseo personal</h2>
      <label
        ><input type="checkbox" data-id="cepillo" />Cepillo de dientes + pasta</label
      >
      <label><input type="checkbox" data-id="desodorante" />Desodorante</label>
      <label
        ><input type="checkbox" data-id="protector-solar" />Protector solar SPF
        30+</label
      >
      <label
        ><input type="checkbox" data-id="crema-hidratante" />Crema hidratante
        ligera</label
      >
      <label><input type="checkbox" data-id="gel" />Gel/champú</label>
      <label><input type="checkbox" data-id="peine" />Peine pequeño</label>
      <label
        ><input type="checkbox" data-id="pinzas" />Pinzas, coleteros, horquillas</label
      >
      <label
        ><input type="checkbox" data-id="maquillaje" />Maquillaje básico</label
      >
      <label
        ><input type="checkbox" data-id="toallitas" />Toallitas húmedas y
        pañuelos</label
      >
      <label
        ><input type="checkbox" data-id="afeitar" />Maquinilla de afeitar</label
      >
      <label
        ><input type="checkbox" data-id="tapones" />Tapones para los oídos</label
