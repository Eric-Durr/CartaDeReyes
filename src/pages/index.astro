---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LightGraphIsland from "../components/LightGraphIsland";
---

<!doctype html>
<html lang="es">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

  {
    /*
    ï¿½ Esta clase activa el layout especial en global.css
    y quita el gradiente/blanco de fondo.
  */
  }
  <body class="layout-lightgraph">
    <Header title={SITE_TITLE} />

    {
      /*
      main ya no limita a 720px gracias a body.layout-lightgraph main {...}
      y dejamos que el island controle su propio padding.
    */
    }
    <main>
      <LightGraphIsland client:load />
    </main>

    <Footer />
  </body>
</html>
