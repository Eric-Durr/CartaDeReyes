    <div class="category">
      <h2>� Bolso o mochila de mano</h2>
      <label><input type="checkbox" data-id="libro" />Libro/Kindle</label>
      <label><input type="checkbox" data-id="snacks" />Snacks</label>
      <label><input type="checkbox" data-id="mascarilla" />Mascarilla</label>
      <label
        ><input type="checkbox" data-id="gel-hidro" />Gel hidroalcohólico</label
      >
      <label
        ><input type="checkbox" data-id="paraguas" />Paraguas plegable</label
      >
      <label><input type="checkbox" data-id="boligrafo" />Bolígrafo</label>
    </div>

    <Footer />
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f8f8f8;
        padding: 2rem;
      }
      h2 {
        color: #333;
        border-bottom: 2px solid #ccc;
        padding-bottom: 0.5rem;
      }
      .category {
        margin-bottom: 2rem;
      }
      label {
        display: block;
        margin-bottom: 0.3rem;
      }
      input[type="checkbox"] {
        margin-right: 0.5rem;
      }
    </style>
  </body>
</html>
