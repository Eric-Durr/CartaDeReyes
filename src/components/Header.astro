---
import { SITE_TITLE } from "../consts";
---

<header
  class="sticky top-0 z-30 border-b border-slate-800 bg-slate-950/90 backdrop-blur"
>
  <nav
    class="mx-auto flex h-14 max-w-6xl items-center justify-between px-4 md:h-16"
  >
    {/* Logo / título */}
    <h2
      class="m-0 text-base font-semibold tracking-tight text-slate-50 md:text-lg"
    >
      <a
        href="/"
        class="group inline-flex items-center gap-2 text-slate-50 no-underline"
      >
        <span
          class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-gradient-to-tr from-sky-500 to-emerald-400 text-xs font-bold text-slate-950 shadow-sm"
        >
          ED
        </span>
        <span class="group-hover:text-sky-300 transition-colors">
          {SITE_TITLE}
        </span>
      </a>
    </h2>

    {/* Enlaces internos (si los necesitas más adelante) */}
    <div class="hidden items-center gap-2 text-sm text-slate-300 md:flex">
      <!--
      <a href="/otra-ruta" class="px-2 py-1 hover:text-sky-300">
        Otra sección
      </a>
      -->
    </div>

    {/* Enlaces sociales */}
    <div class="flex items-center gap-3">
      <a
        href="https://github.com/Eric-Durr"
        target="_blank"
        rel="noreferrer"
        class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-slate-700 bg-slate-900/70 text-slate-100 shadow-sm hover:border-sky-400 hover:text-sky-300 hover:shadow-lg hover:bg-slate-900 transition-colors"
      >
        <span class="sr-only">Go to my GitHub repo</span>
        <svg
          viewBox="0 0 16 16"
          aria-hidden="true"
          width="18"
          height="18"
          class="block"
        >
          <path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path>
        </svg>
      </a>
    </div>
  </nav>
</header>
